<h1>🐽<%= @restaurant.name %>🐽</h1>
<h3>👩🏻‍🍳<%= @restaurant.category %></h2>
<h3>📍<%= @restaurant.address %></h2>
<h3>☎️<%= @restaurant.phone_number %></h2>
<br>
<br>
<h3>Reviews</h3>
<% @restaurant.reviews.each do |review| %>
<p><%= review.content %> Rating: <%= review.rating %></p>
<% end %>

<%= link_to 'Leave a review', new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
<%= link_to 'Edit', edit_restaurant_path(@restaurant) %> |
<%= link_to 'Back', restaurants_path %>
